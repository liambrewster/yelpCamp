<% layout('layouts/boilerplate')%>
    <div class="row">
        <div class="col-6">
            <div class="card mb-3">
                <img class="card-img-top" src="<%=campgrounds.image%>" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=campgrounds.title%>
                    </h5>
                    <p class="card-text">
                        <%=campgrounds.description%>.
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%=campgrounds.location%>
                    </li>
                    <li class="list-group-item">
                        Lovingly suggested by <%=campgrounds.author.username%>
                    </li>
                    <li class="list-group-item text-muted">Â£<%=campgrounds.price%>/ Per Night
                    </li>
                </ul>
                <% if(currentUser && campgrounds.author.equals(currentUser._id)) { %>
                    <div class="card-body">
                        <a class="card-link btn btn-warning" href="/campgrounds/<%=campgrounds._id%>/edit">Edit</a>
                        <form class="d-inline" action="/campgrounds/<%=campgrounds._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                    <% } %>
            </div>

        </div>
        <div class="col-6">
            <h2>Please Leave A Review</h2>
            <form action="/campgrounds/<%=campgrounds._id%>/review" method="POST" novalidate
                class="validated-forms mb-3">
                <div class="mb-3">
                    <label class="form-label" for="rating">Rating [1-5]</label>
                    <input class="form-range" type="range" name="review[rating]" id="rating" min="1" max="5">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="body">Review</label>
                    <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                    <div class="valid-feedback">
                        Looks Good, Thanks for the review!
                    </div>
                    <div class="invalid-feedback">
                        Please Provide the review information!
                    </div>
                </div>
                <button class="btn btn-success mb-3">Submit</button>
            </form>
            <% for(let review of campgrounds.reviews) { %>
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">
                            Rating: <%=review.rating%>
                        </h5>
                        <p class="card-text">
                            Review: <%=review.body%>
                        </p>
                        <form action="/campgrounds/<%=campgrounds._id%>/review/<%=review._id%>?_method=delete"
                            method="post">
                            <button class="btn btn-small btn-danger">Delete
                            </button>
                        </form>
                    </div>
                </div>


                <% } %>
        </div>
    </div>