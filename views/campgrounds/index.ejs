<% layout('layouts/boilerplate')%>
    <h1>All <%=count %> Campgrounds</h1>
    <div>
        <a href="/campgrounds/new">Add campgrounds</a>
    </div>
    <%for(let camp of campgrounds) {%>
        <div class="card">
            <div class="row">
                <div class="col-md-4">
                    <% if(camp.images.length) {%>
                        <img src="<%=camp.images[0].url%>" alt="<%=camp.images[0].filename%>" class="img-fluid">
                        <% } else { %>
                            <img src="https://res.cloudinary.com/br3wst3r/image/upload/v1629576867/YelpCamp/ibrickg4g59kzhhdtq8j.jpg"
                                alt="default Image" class="img-fluid">
                            <% } %>
                </div>
                <div class="col md-8">
                    <div class="card-body">
                        <h5>
                            <%=camp.title%>
                        </h5>
                        <p class="card-text">
                            <%=camp.description%>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                in <%=camp.location%>
                            </small>
                        </p>
                        <a href="/campgrounds/<%=camp._id%>" class="btn btn-primary">View <%=camp.title%></a>
                    </div>
                </div>
            </div>
        </div>
        <%}%>